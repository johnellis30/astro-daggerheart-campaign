---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import ViewToggle from '../components/ViewToggle.astro';

type Props = {
	title: string;
	description: string;
	pubDate: Date;
	updatedDate?: Date;
	heroImage?: string;
	backUrl?: string;
	backLabel?: string;
};

const { title, description, pubDate, updatedDate, heroImage, backUrl, backLabel } = Astro.props;

// Determine back URL and label based on current path if not provided
const currentPath = Astro.url.pathname;
let defaultBackUrl = '/';
let defaultBackLabel = 'Back to Home';

if (currentPath.includes('/characters/')) {
	defaultBackUrl = '/characters';
	defaultBackLabel = 'Back to Characters';
} else if (currentPath.includes('/locations/')) {
	defaultBackUrl = '/locations';
	defaultBackLabel = 'Back to Locations';
} else if (currentPath.includes('/monsters/')) {
	defaultBackUrl = '/monsters';
	defaultBackLabel = 'Back to Monsters';
} else if (currentPath.includes('/items/')) {
	defaultBackUrl = '/items';
	defaultBackLabel = 'Back to Items';
} else if (currentPath.includes('/adventures/')) {
	defaultBackUrl = '/adventures';
	defaultBackLabel = 'Back to Adventures';
} else if (currentPath.includes('/campaign/')) {
	defaultBackUrl = '/campaign';
	defaultBackLabel = 'Back to Campaign';
} else if (currentPath.includes('/environments/')) {
	defaultBackUrl = '/environments';
	defaultBackLabel = 'Back to Environments';
} else if (currentPath.includes('/blog/')) {
	defaultBackUrl = '/blog';
	defaultBackLabel = 'Back to Blog';
}

const finalBackUrl = backUrl || defaultBackUrl;
const finalBackLabel = backLabel || defaultBackLabel;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			.back-button {
				display: inline-block;
				margin-bottom: 2rem;
				padding: 0.75rem 1.5rem;
				background: #2337ff;
				color: white;
				text-decoration: none;
				border-radius: 6px;
				font-weight: 500;
				transition: background-color 0.3s ease;
				border: 2px solid #2337ff;
			}
			.back-button:hover {
				background: #000d8a;
				border-color: #000d8a;
			}
			.back-button::before {
				content: '← ';
				margin-right: 0.5rem;
			}
		</style>
	</head>

	<body>
		<Header />
		<ViewToggle />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<a href={finalBackUrl} style="
						display: inline-block;
						margin-bottom: 2rem;
						padding: 0.75rem 1.5rem;
						background: #2337ff;
						color: white;
						text-decoration: none;
						border-radius: 6px;
						font-weight: 500;
						transition: background-color 0.3s ease;
					" onmouseover="this.style.background='#000d8a'" onmouseout="this.style.background='#2337ff'">← {finalBackLabel}</a>
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
